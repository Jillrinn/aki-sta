{
  "name": "aki-sta",
  "version": "1.0.0",
  "private": true,
  "description": "空きスタサーチくん - モノリポ管理用",
  "scripts": {
    "dev": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd functions && npm start",
    "dev:frontend": "cd frontend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd functions && npm test",
    "test:frontend": "cd frontend && npm test -- --watchAll=false"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}