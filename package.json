{
  "name": "aki-sta",
  "version": "1.0.0",
  "private": true,
  "description": "空きスタサーチくん - モノリポ管理用",
  "scripts": {
    "start": "concurrently -n \"backend,frontend\" -c \"blue,green\" \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd functions && npm start",
    "start:frontend": "wait-on http://localhost:7071 && cd frontend && npm start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd functions && npm test",
    "test:frontend": "cd frontend && npm test -- --watchAll=false"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "wait-on": "^8.0.4"
  }
}
