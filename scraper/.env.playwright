# Playwright Browser Cache Directory for Python/scraper
# This separates the browser cache from Node.js's Playwright installation
export PLAYWRIGHT_BROWSERS_PATH="${HOME}/.cache/playwright-python"

# Disable telemetry
export PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0

# Use webkit as default browser for M1 Mac compatibility
export PLAYWRIGHT_BROWSER="webkit"

# Set browser download host (optional, for faster downloads in certain regions)  
# export PLAYWRIGHT_DOWNLOAD_HOST=https://playwright.azureedge.net