# Playwright Browser Cache Directory for Node.js/e2e tests
# This separates the browser cache from Python's Playwright installation
export PLAYWRIGHT_BROWSERS_PATH="${HOME}/.cache/playwright-node"

# Disable telemetry
export PLAYWRIGHT_SKIP_BROWSER_DOWNLOAD=0

# Set browser download host (optional, for faster downloads in certain regions)
# export PLAYWRIGHT_DOWNLOAD_HOST=https://playwright.azureedge.net